<h1>Show Album</h1>

<h3><%= @album.title %></h3>
<p><%= @album.description %></p>

<ul>
  <%= for track <- @album.tracks do %>
    <li class="album-track">
      <img scr="<%= track.img %>" width="50px" height="50px" />
      <p><%= track.name %></p>
    </li>
  <% end %>
</ul>

<span><%= link "Back", to: Routes.page_path(@conn, :index) %></span>
